@using SlimTrack.Shared
@code {
    [Parameter] public List<WeightEntryDto> Items { get; set; } = [];
    [Parameter] public EventCallback<int> OnDelete { get; set; }
}
<table class="table">
    <thead><tr><th>日期</th><th>体重(kg)</th><th>备注</th><th></th></tr></thead>
    <tbody>
        @foreach (var x in Items)
        {
            <tr>
                <td>@x.Date.ToString("yyyy-MM-dd")</td>
                <td>@x.WeightKg</td>
                <td>@x.Note</td>
                <td><button @onclick="() => OnDelete.InvokeAsync(x.Id)">删除</button></td>
            </tr>
        }
    </tbody>
</table>